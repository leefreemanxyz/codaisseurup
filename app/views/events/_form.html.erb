<%= form_for @event do |f| %>
<% @event.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger" role="alert"><%= msg %></p>
  <% end %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location %>
  </div>
  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">â‚¬</div>

    <%= f.number_field :price %>
  </div>
  <div class="form-group">
    <label>Capacity</label>
    <%= f.number_field :capacity %>
  </div>
  <div class="form-group">
    <label>Includes food?</label>
    <%= f.check_box :includes_food %>
  </div>
  <div class="form-group">
    <label>Includes drink?</label>
    <%= f.check_box :includes_drinks %>
  </div>
  <div class="form-group">
    <label>Starts at</label>
    <%= f.datetime_select :starts_at %>
  </div>
  <div class="form-group">
    <label>Ends at</label>
    <%= f.datetime_select :ends_at %>
  </div>
  <div class="form-group">
    <label>Active?</label>
    <%= f.check_box :active %>
  </div>
  <label>Categories</label>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class:"check_box") %> <%= b.object.name %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Save" , class: "btn btn-success" %>
  </div>
<% end %>
